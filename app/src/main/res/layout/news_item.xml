<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_weight="5">

        <TextView
            android:id="@+id/news_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="News Header"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/news_body"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the news body asjdajsdjaghdgahsdgjhagsdhgasjdgahsgdjagsdhgasjdgjasdgajsgdjg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/news_by"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:text="News by"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Lat"
            android:padding="5dp"
            android:id="@+id/news_lat"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text="Lon"
            android:padding="5dp"
            android:id="@+id/news_lon"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>